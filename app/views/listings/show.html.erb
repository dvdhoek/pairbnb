<h1>Listing posts</h1>
 
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>
 
<% @listings.each do |listing| %>
  <tr>
    <td><%= listing.name %></td>
    <td><%= listing.description %></td>
    <td><%= link_to 'Show', listing_path(listing) %></td>
    <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
    <td><%= link_to 'Destroy', listing, :confirm => 'Are you sure?', :method => :delete %></td>
    <td><%= link_to 'Reserve', new_listing_reservation_path(listing) %></td>  

    <%= image_tag listing.images[0].url(:thumb).to_s %>       
    <%= image_tag listing.images[1].url(:thumb).to_s %>                          
  </tr>
<% end %>
</table>
 
<br />
 
<%= link_to 'New post', new_listing_path %>